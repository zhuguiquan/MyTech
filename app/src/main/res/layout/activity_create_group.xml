<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.xiaoxi.CreateGroupActivity">
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/comeback"
        android:src="@drawable/common_icon_back_n_hdpi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_14"
        android:text="创建群聊"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#999"
        android:layout_marginTop="@dimen/dp_80"/>
    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_centerHorizontal="true"
        android:src="@drawable/quncreate"/>
    <EditText
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_270"
        android:layout_centerHorizontal="true"
        android:hint="填写群名称(2-10)个汉字"
        android:id="@+id/groupName"/>
    <EditText
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_330"
        android:layout_centerHorizontal="true"
        android:background="@drawable/plback"
        android:gravity="start"
        android:hint="介绍下你的群吧,让更多人加入"
        android:id="@+id/groupDirsion"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100字以内"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_240"/>
    <Button
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        android:text="创建"
        android:id="@+id/create"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorWhite"
        android:background="@drawable/style_login_btn"/>
</RelativeLayout>